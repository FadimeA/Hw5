<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyblue"
    tools:context=".SecondActivity">




    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/category_btn"
                android:layout_width="88dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_category"
                android:padding="5dp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton

                android:contentDescription="Heart button"
                android:onClick="onHeartClick"
                android:id="@+id/heart_button"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
              android:background="@drawable/bg_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/explore_text"
                android:layout_width="311dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Explore the nightlife of your city"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_btn" />

            <TextView
                android:id="@+id/free_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:text="free"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explore_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="PriceðŸ’°"
                android:textColor="@color/navyblue"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/free_text" />

            <LinearLayout

                android:id="@+id/linear_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toStartOf="@+id/gradient_view"
                app:layout_constraintTop_toBottomOf="@+id/explore_text">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_oneuser" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_twouser" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_threeusers" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_fourusers" />


            </LinearLayout>

            <TextView
                android:layout_width="72dp"
                android:layout_height="15dp"
                android:text="Participants"
                android:textColor="@color/navyblue"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/linear_container"
                app:layout_constraintStart_toStartOf="@id/linear_container"
                app:layout_constraintTop_toBottomOf="@+id/linear_container" />

            <View
                android:id="@+id/gradient_view"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/bg_view"
                app:layout_constraintBottom_toBottomOf="@+id/linear_container"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="72dp"
                android:layout_height="15dp"
                android:text="Accessebility"
                android:textColor="@color/navyblue"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/gradient_view"
                app:layout_constraintTop_toBottomOf="@+id/gradient_view" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/big_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/bg_button"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view" />



    <Spinner
        style = "@style/CustomSpinner"
        android:layout_marginTop="50dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/big_button"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/spinner"
        android:layout_width="158dp"
        android:layout_height="wrap_content"/>


    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider"
        android:layout_width="176dp"
        android:layout_height="10dp"

        android:layout_marginTop="368dp"
        style="@style/Customslider"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:values="@array/initial_slider_values"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/second_slider"
        android:layout_width="176dp"
        android:layout_height="10dp"
        android:layout_marginTop="50dp"
      style="@style/Customslider"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:values="@array/initial_slider_values"/>


</androidx.constraintlayout.widget.ConstraintLayout>